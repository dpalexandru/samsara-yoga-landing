            toggle.addEventListener('click', (e) => {
              const button = e.currentTarget;
              if (!(button instanceof HTMLElement)) return;
      
              const card = button.closest('.card');
              const extraText = card?.querySelector('.extra-text');
              const prenotaButton = card?.querySelector('.prenota-button');
      
              if (extraText instanceof HTMLElement && prenotaButton instanceof HTMLElement) {
                extraText.classList.toggle('hidden');
                prenotaButton.classList.toggle('hidden');
      
                // Cambia testo "Leggi di più" / "Nascondi"
                if (extraText.classList.contains('hidden')) {
                  button.textContent = 'Leggi di più';
                } else {
                  button.textContent = 'Nascondi';
                }
              }
            });
          });
        });
      </script>

