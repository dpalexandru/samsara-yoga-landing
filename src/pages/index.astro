      </div>
    </details>

    <!-- FAQ 7 -->
    <details class="group border border-emerald-200 rounded-lg bg-white p-4 open:shadow-md transition">
      <summary class="flex cursor-pointer items-center justify-between font-semibold text-emerald-800">
        Qual è la differenza tra Mysore e lezione guidata?
        <span class="ml-3 text-emerald-600 transition group-open:rotate-180">⌄</span>
      </summary>
      <div class="mt-2 text-gray-700">
        Nella <strong>Mysore</strong> pratichi autonomamente la sequenza con assistenza individuale; 
        nella <strong>lezione guidata</strong> l’insegnante conduce il gruppo passo dopo passo.
      </div>
    </details>
  </div>

  <!-- CTA finale -->
  <div class="text-center mt-8">
    <a href="/contattami" class="inline-flex items-center gap-2 bg-emerald-600 hover:bg-emerald-700 text-white font-semibold px-6 py-3 rounded-full shadow-sm transition">
      Prenota la tua prova gratuita
    </a>
  </div>
</section>





    <!-- Script slider -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const slider = document.getElementById("gallery-slider");
        const prevBtn = document.getElementById("prev");
        const nextBtn = document.getElementById("next");

        if (slider && prevBtn && nextBtn) {
          const slides = slider.children;
          let index = 0;

          const updateSlider = () => {
            const offset = index * -100;
            slider.style.transform = `translateX(${offset}%)`;
          };

          nextBtn.addEventListener("click", () => {
            if (index < slides.length - 1) {
              index++;
              updateSlider();
            }
          });

          prevBtn.addEventListener("click", () => {
            if (index > 0) {
              index--;
              updateSlider();
            }
          });
        }
      });
    </script>
      <script>
        document.addEventListener("DOMContentLoaded", () => {
          const toggles = document.querySelectorAll('.toggle-more');
      
          toggles.forEach((toggle) => {
            toggle.addEventListener('click', (e) => {
              const button = e.currentTarget;
              if (!(button instanceof HTMLElement)) return;
      
              const card = button.closest('.card');
              const extraText = card?.querySelector('.extra-text');
              const prenotaButton = card?.querySelector('.prenota-button');
      
              if (extraText instanceof HTMLElement && prenotaButton instanceof HTMLElement) {
                extraText.classList.toggle('hidden');
                prenotaButton.classList.toggle('hidden');
      
                // Cambia testo "Leggi di più" / "Nascondi"
                if (extraText.classList.contains('hidden')) {
                  button.textContent = 'Leggi di più';
                } else {
                  button.textContent = 'Nascondi';
                }
              }
            });
          });
        });
      </script>

